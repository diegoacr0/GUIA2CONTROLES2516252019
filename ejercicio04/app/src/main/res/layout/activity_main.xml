<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/twDato1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/twDato2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/twDato1"
        app:layout_constraintStart_toStartOf="@+id/twDato1"
        app:layout_constraintTop_toBottomOf="@+id/twDato1" />

    <TextView
        android:id="@+id/twDato3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/twDato2"
        app:layout_constraintTop_toBottomOf="@+id/twDato2" />

    <TextView
        android:id="@+id/twDato4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/twDato3"
        app:layout_constraintStart_toStartOf="@+id/twDato3"
        app:layout_constraintTop_toBottomOf="@+id/twDato3" />

</androidx.constraintlayout.widget.ConstraintLayout>